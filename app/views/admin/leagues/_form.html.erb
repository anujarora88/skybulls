<%= form_for @league, :url => @league.new_record? ? admin_leagues_path : admin_league_path(@league)  do |f| %>
  <% if @league.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@league.errors.count, "error") %> prohibited this league from being saved:</h2>

      <ul>
      <% @league.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%=  select("category", '',['Daily','Weekly'], {:include_blank => false})%>
  </div>
  <div class="field">
    <%= f.label :market %><br />
    <%= f.text_field :market %>
  </div>
  <div class="field">
    <%= f.label :algo_name %><br />
    <%= f.text_field :algo_name %>
  </div>

  <div class="field">
     <%= f.label :start_time %><br />
     <%= f.text_field :start_time, :class=> 'dateFields'%>
    </div>

    <div class="field">
      <%= f.label :end_time %><br />
      <%= f.text_field :end_time, :class=> 'dateFields'%>
    </div>

    <div class="field">
      <%= f.label :latest_registration_time %><br />
      <%= f.text_field :latest_registration_time%>
    </div>

    <div class="field">
      <%= f.label :buy_in %><br />
      <%= f.text_field :buy_in%>
    </div>

    <div class="field">
      <%= f.label :commission %><br />
      <%= f.text_field :commission%>
    </div>

    <div class="field">
      <%= f.label :invitation_only %><br />
      <td><%= check_box_tag :invitation_only%></td>
    </div>

    <% Exchange.all.each do |exchange| %>
        <tr>
          <td><%= exchange.name %></td>
          <td><%= check_box_tag  "exchange_ids[#{exchange.id}]", exchange.id%></td>
        </tr>
    <% end %>

    <div class="field">
      <%= f.label :min_users %><br />
      <%= f.text_field :min_users%>
    </div>

    <div class="field">
      <%= f.label :max_users %><br />
      <%= f.text_field :max_users%>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
